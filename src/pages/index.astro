---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import News from '@components/sections/News.astro';
import Services from '@components/sections/Services.astro';
import Profile from '@components/sections/Profile.astro';
import Portfolio from '@components/sections/Portfolio.astro';
import Testimonials from '@components/sections/Testimonials.astro';
import ContactCTA from '@components/sections/ContactCTA.astro';
import Footer from '@components/common/Footer.astro';

const meta = {
  title: 'Agile Technology - 全ての企業に自社開発を',
  description: '生成AIの登場で、自社開発はもはや夢物語では無くなりました。MVP開発・DX/業務自動化・Web制作を、爆速かつ高品質、しかも圧倒的コストパフォーマンスでご提供します。大手品質を、フリーランス法人の価格とスピードで。',
  keywords: ['アジャイル', 'テクノロジー', 'DX', '自社開発', 'MVP開発', '業務自動化', 'Web制作', 'フリーランス法人', '生成AI']
};
